{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES6",
        "moduleResolution": "node",
        "allowJs": true,
        "baseUrl": ".",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/types/*"
            ]
        }
    },
    "include": [
        "./components/**/*",
        "./typings"
    ]
}

